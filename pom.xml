<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

	<groupId>cesarhernandezgt</groupId>
	<artifactId>t-factory-utils</artifactId>
	<version>0.0.1</version>
	<packaging>jar</packaging>

	<name>t-factory-utils</name>
	
	<description>Utility library, dto, for the tFactory-Server and tFactory-Agent.</description>
	<scm>
		<url>https://github.com/tfactory</url>
		<developerConnection>cesarHernandezGt</developerConnection>
	</scm>
	<url>https://github.com/tfactory</url>	

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>


	<build>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.1</version>
					<configuration>
						<source>1.7</source>
						<target>1.7</target>
					</configuration>
				</plugin>

				<plugin>
					<groupId>com.mycila</groupId>
					<artifactId>license-maven-plugin</artifactId>
					<version>2.11</version>
					<configuration>
						<header>com/mycila/maven/plugin/license/templates/APACHE-2.txt</header>
						<properties>
							<owner>Cesar Hernandez.</owner>
							<project.inceptionYear>2015</project.inceptionYear>
							<email>https://github.com/tfactory</email>
						</properties>
						<excludes>
							<exclude>**/README</exclude>
							<exclude>**/LICENSE</exclude>
							<exclude>src/test/resources/**</exclude>
							<exclude>src/main/resources/**</exclude>
						</excludes>
					</configuration>
					<executions>
						<execution>
							<goals>
								<goal>check</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				
			</plugins>
	</build>
    
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
		</dependency>
	</dependencies>
	<organization>
		<url>https://cesarhernandezgt.blogspot.com/p/tfactory.html</url>
		<name>cesarHernandezGt</name>
	</organization>
</project>
